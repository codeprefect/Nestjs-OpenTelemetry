{
  "name": "@metinseylan/nestjs-opentelemetry",
  "version": "3.0.0",
  "description": "deeply integrated OpenTelemetry module for Nestjs",
  "author": "metinsyln@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetinSeylan/Nestjs-OpenTelemetry.git"
  },
  "keywords": [
    "nestjs",
    "opentelemetry",
    "tracing",
    "observability",
    "metric",
    "prometheus",
    "zipkin",
    "jaeger",
    "grafana",
    "opencensus"
  ],
  "bugs": {
    "url": "https://github.com/MetinSeylan/Nestjs-OpenTelemetry/issues"
  },
  "homepage": "https://github.com/MetinSeylan/Nestjs-OpenTelemetry#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/schedule": "^2.2.1",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.36.5",
    "@opentelemetry/context-async-hooks": "^1.11.0",
    "@opentelemetry/core": "^1.11.0",
    "@opentelemetry/instrumentation-http": "^0.37.0",
    "@opentelemetry/propagator-b3": "^1.11.0",
    "@opentelemetry/propagator-jaeger": "^1.11.0",
    "@opentelemetry/resource-detector-alibaba-cloud": "^0.27.4",
    "@opentelemetry/resource-detector-aws": "^1.2.2",
    "@opentelemetry/resource-detector-container": "^0.2.2",
    "@opentelemetry/resource-detector-gcp": "^0.28.0",
    "@opentelemetry/resource-detector-instana": "^0.4.1",
    "@opentelemetry/resources": "^1.11.0",
    "@opentelemetry/sdk-node": "^0.37.0",
    "@opentelemetry/sdk-trace-base": "^1.11.0",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/schedule": "^2.2.1",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "wait-for-expect": "^3.0.2"
  }
}
